{
  "name": "ezra",
  "version": "0.1.0",
  "description": "Personal project management tool with optional AI enhancements",
  "main": "dist/index.js",
  "bin": {
    "ezra": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx src/cli/index.ts",
    "start": "node dist/cli/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "db:migrate": "tsx src/data/migrations/run.ts",
    "db:seed": "tsx src/data/seeds/run.ts"
  },
  "keywords": [
    "project-management",
    "task-management",
    "productivity",
    "cli",
    "typescript"
  ],
  "author": "Ezra Team",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "date-fns": "^3.2.0",
    "dotenv": "^16.3.1",
    "inquirer": "^9.2.12",
    "nanoid": "^5.0.4",
    "ora": "^8.0.1",
    "table": "^6.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}