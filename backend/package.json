{
  "name": "@ezra/backend",
  "version": "1.0.0",
  "description": "Ezra backend Express API server",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "kill-port 6001 && nodemon",
    "dev:force": "lsof -ti:6001 | xargs kill -9 2>/dev/null || true && nodemon",
    "build": "npx tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "type-check": "npx tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:migrate": "node -r ts-node/register ../node_modules/.bin/knex migrate:latest",
    "db:migrate:make": "npx knex migrate:make",
    "db:migrate:rollback": "npx knex migrate:rollback",
    "db:seed": "npx knex seed:run",
    "db:migrate:test": "NODE_ENV=test npx knex migrate:latest"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.17.0",
    "@types/multer": "^2.0.0",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "multer": "^2.0.2",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "jest": "^30.0.5",
    "kill-port": "^2.0.1",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  }
}
