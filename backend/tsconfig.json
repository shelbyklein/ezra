{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@ezra/shared": ["../shared/src"]
    }
  },
  "include": ["src/**/*", "routes/**/*", "utils/**/*", "middleware/**/*", "models/**/*", "migrations/**/*", "knexfile.ts"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "references": [
    { "path": "../shared" }
  ]
}